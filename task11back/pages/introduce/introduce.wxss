/* introduce.wxss */

.border1 {
  border-bottom: 1px solid #ccc;
  padding: 1rem;
}

.table1 {
  display: inline-block;
  margin-right: 1rem;
  vertical-align: middle;
}

.table {
  display: inline-block;
  vertical-align: middle;
  width: 70%;
}

.nav {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.default {
  width: 33.3%;
  text-align: center;
  flex: 1;
}

.choose {
  width: 33.3%;
  text-align: center;
  color: rgb(54, 190, 54);
  padding-bottom: 1rem;
  flex: 1;
  border-bottom: 0.1rem solid rgb(54, 190, 54);
}

.show {
  display: block;
  border-top: 1px solid #ccc;
}

.hidden {
  display: none;
}
