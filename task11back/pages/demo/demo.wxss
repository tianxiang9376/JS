.nav {
  width: 100%;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid gainsboro;
}

.default {
  width:33.3%;
  text-align: center;
  flex: 1;
  border-right: 1px solid gainsboro;
  
}

.red {
  width:33.3%;
  text-align: center;
